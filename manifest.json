{
    "manifest_version": 3,
    "name": "QA Assistant",
    "description": "Manual QA helper with highlight, selectors and screenshots",
    "version": "1.1.0",
    "icons": {
        "16": "assets/16x16.png",
        "48": "assets/48x48.png",
        "128": "assets/128x128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/16x16.png",
            "48": "assets/48x48.png"
        }
    },
    "permissions": [
        "storage",
        "tabs",
        "downloads",
        "cookies"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "options_page": "style/style.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "take_screenshot": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y"
            },
            "description": "Take screenshot"
        }
    }
}